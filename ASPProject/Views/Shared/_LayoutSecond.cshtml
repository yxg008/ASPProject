<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width", initial-scale= 1 />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <link href="~/1css/smu.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Logo</a>
            <!-- Make sure to provide the correct path to your image -->
            <img src="~/images/logo-saint-martins.png" alt="Logo" style="width:40px;" class="rounded-pill">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Create" asp-controller="Instructor">Add new instructor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Instructor">List all instructors</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Instructor</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Create" asp-controller="Instructor">Add new Instructor</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Instructor">List all</a></li>
                            <li><a class="dropdown-item" href="http://www.stmartin.edu">Go to SMU</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Student</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Create" asp-controller="Student">Add new Student</a></li>
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Student">List all</a></li>
                            <li><a class="dropdown-item" href="http://www.stmartin.edu">Go to SMU</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div>
        @RenderBody()
    </div>

    <a class="btn btn-danger" asp-action="Create" asp-controller="Instructor">Create new Instructor</a>
    <div>
        @RenderSection("SMUSection",false)
    </div>
</body>
</html>
